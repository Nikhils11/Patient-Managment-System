pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java17'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/yourusername/project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Merge PR') {
            when {
                expression { currentBuild.result == null || currentBuild.result == 'SUCCESS' }
            }
            steps {
                sh '''
                curl -X PUT \
                -H "Authorization: token YOUR_GITHUB_TOKEN" \
                https://api.github.com/repos/user/repo/pulls/PR_NUMBER/merge
                '''
            }
        }

    }

    post {

        success {
            echo 'Build Success'
        }

        failure {
            echo 'Build Failed'
        }

    }
}
